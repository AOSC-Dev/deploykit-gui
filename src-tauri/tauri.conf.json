{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "deploykit-gui",
    "version": "0.2.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "all": true, 
        "confirm": true, 
        "message": true
      }
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": true,
        "resizable": true,
        "title": "deploykit-gui",
        "width": 1024,
        "height": 768
      }
    ],
    "cli": {
      "description": "Depliykit GUI",
      "args": [{
        "name": "skip",
        "short": "s",
        "multipleOccurrences": true,
        "description": "Skip select Desktop or Install view"
      }, {
        "name": "resource-dir",
        "short": "d",
        "multipleOccurrences": false,
        "description": "Resource directory",
        "takesValue": true,
        "required": true
      }]
    }
  }
}
